<!DOCTYPE html>
<html>

<head>
  <title>Select {{select}}</title>
  <style>
    #board {
      margin: auto;
      display: grid;
      grid-template-columns: auto auto auto;
      background-color: #2196F3;
      padding: 10px;
      width: 800px;
    }

    .cell {
      background-color: rgba(255, 255, 255, 0.8);
      border: 1px solid rgba(0, 0, 0, 0.8);
      padding: 20px;
      font-size: 30px;
      height: 10vmin;
      text-align: center;
    }

    #error {
      height: 5vh;
      background-color: white;
      padding: 0px;
      margin: 0px;
      text-align: center;
      border: 1px solid black;
    }

    #bottombar {
      height: 5vh;
    }

    #instructions {
      height: 5vh;
      background-color: white;
      padding: 0px;
      margin: 0px;
      text-align: center;
      border: 1px solid black;
    }

    #bottombar button {
      width: 50%;
      height: 100%;
      margin: 0;
      padding: 0;
      position: relative;
      float: left;
      font-size: 2vw
    }

    html,
    body {
      height: 100%;
      margin: 0;
      padding: 0;
    }

    .playable { background-color: red;}
  </style>
</head>

<body>
  <div id="instructions"> {{instructions}} </div>
  {{#if error}}
    <div id="error"> Error: {{error}}</div>
  {{/if}}
  <div id="board">
    {{#each cells}}
       <a href={{link}}><div class="cell playable">{{object}}</div></a>
    {{/each}}
  </div>
  <div id="bottombar">
    <a href="/restart"><button>Restart</button></a>
  </div>

</body>

<!-- import the the tic.ts file generated by browserify -->
<script src="tic.js"></script>

</html>